<h1>Stages in the Show</h1>

<% if @stages.any?%>
  <ul>
    <% @stages.each do |stage|%>
      <li><a href="/stages/<%= stage.id%>"><%=stage.name%></a></li>
    <% end %>
  </ul>
<% else %>
  <p> There are currently no stages </p>
<% end %>

<a href="/stages/new">Add a new stage</a>

<form action="/stages/">
  <div class='form-group'>
    <label for="search">Search</label>
    <input type="text" name="search" id="search">
  </div>
  <button type='submit' class='btn'>Go!</button>
</form>